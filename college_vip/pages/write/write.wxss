/* pages/write/write.wxss */
page{
  background-color: white;
}

.container {
  display: flex;
  flex-direction: column;
  width: 70%;
  height: 70%;
  margin-top:100rpx;
   border:1px burlywood solid; 
}

.input-container {
  width: 100%;
  height: 1100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input {
  width: 80%;
  height: 105rpx;
  background-color: white;
  padding: 10rpx;
  border:1px blue solid; 
  
  margin-top: 460rpx;

  font-size:32rpx;
  line-height: 56rpx;
}

.button {
  height: 100rpx;
  width: 70%;
  
  color: white;
  display: flex;
  justify-content: center;
  border:1px red solid; 
  padding: 10rpx;
  align-items: center;
  position: fixed;
  bottom: 10px;
}

.submit-btn {
  position: fixed;
  bottom: 0px;
  height: 100rpx;
  width: 70%;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
 background-color: rgb(41, 153, 255); 
 
}